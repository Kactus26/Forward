<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Forward4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Forward4.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Forward4" Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Уроки">
            <ShellContent ContentTemplate="{DataTemplate local:Entrance}"/>
        </Tab>
        <Tab Title="Задания">
            <ShellContent ContentTemplate="{DataTemplate local:Registration}" />
        </Tab>
        <Tab Title="Словарь">
            <ShellContent ContentTemplate="{DataTemplate local:Login}" />
        </Tab>
        <Tab Title="Профиль">
            <ShellContent ContentTemplate="{DataTemplate local:Login}" />
        </Tab>
    </TabBar>

</Shell>
