<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Forward4.ViewModel"
             x:DataType="vm:VideoViewModel"
             x:Class="Forward4.View.Video" Shell.TabBarIsVisible="False" Shell.NavBarIsVisible="False"
             Title="Video">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding LessonName}" FontFamily="Montserrat" FontSize="40" HorizontalOptions="Center"/>
            <toolkit:MediaElement HeightRequest="300" Source="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"/>
            <Label Text="{Binding Text}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>