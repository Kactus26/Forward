<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Forward4.Model"
             xmlns:vm="clr-namespace:Forward4.ViewModel"
             x:DataType="vm:AllKursesViewModel"
             x:Class="Forward4.View.AllKurses" Background="#2F2E2A">

    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill">
            <Label
                  Text="Все курсы"
                  FontFamily="Montserrat"
                  TextColor="White"
                  Margin="38,0,0,0"
                  FontSize="35"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <CollectionView Grid.Row="1" SelectedItem="{Binding SelectedKurs}" SelectionMode="Single" ItemsSource="{Binding AllKurses}" SelectionChangedCommand="{Binding SelectionMadeCommand}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Kurses">
                <ContentView>
                    <Border Background="#262521" Stroke="Transparent" StrokeThickness="2" Margin="9,18,9,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <Grid Padding="10,15,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6*"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>

                            <Image Source="{Binding ImageUrl}" Margin="0,5,0,0"  WidthRequest="340" HeightRequest="200"/>

                            <Label Text="{Binding Name}" HorizontalOptions="Center" Padding="0,6,0,0" Grid.Row="1" FontSize="23" FontFamily="Montserrat" HeightRequest="40"/>
                            <Label Text="{Binding Author}" Padding="6,4,0,0" TextColor="#B8B7B3" Grid.Row="2" FontSize="18" FontFamily="Montserrat"/>
                            <Label Text="Уроков: " Padding="0,4,30,0"  TextColor="#B8B7B3" Grid.Row="2" HorizontalOptions="End" FontSize="18" FontFamily="Montserrat" />
                            <Label Text="{Binding LessonsCount}" Padding="0,4,15,0" TextColor="#B8B7B3" HorizontalOptions="End" Grid.Row="2" FontSize="18" FontFamily="Montserrat"/>
                        </Grid>
                    </Border>
                </ContentView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>