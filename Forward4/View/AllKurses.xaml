<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Forward4.Model"
             xmlns:vm="clr-namespace:Forward4.ViewModel"
             x:DataType="vm:AllKursesViewModel"
             x:Class="Forward4.View.AllKurses"
             Title="AllKurses">
    <VerticalStackLayout>

        <CollectionView ItemsSource="{Binding AllKurses}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Kurses">
                    <ContentView>
                        <Label Text="{Binding Name}"/>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        

        <Label 
            Text="dl;f,mldjkag"
            VerticalOptions="Center" 
